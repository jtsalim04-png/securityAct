{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div style="margin: 50px auto; max-width: 600px; text-align: center; font-family: Arial, sans-serif;">
    <h1>Welcome to Your Dashboard!</h1>
    <p style="font-size: 18px; color: #666;">
        You have successfully accessed the protected dashboard area.
    </p>
    <div style="margin-top: 30px; padding: 20px; background-color: #f0f0f0; border-radius: 8px;">
        <p><strong>User Information:</strong></p>
        <p>Username: {{ app.user ? app.user.userIdentifier : 'Guest' }}</p>
        <p>Roles: {{ app.user ? app.user.roles|join(', ') : 'None' }}</p>
    </div>
</div>
{% endblock %}